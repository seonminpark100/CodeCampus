<%@ page contentType="text/html;charset=UTF-8" %>
<!DOCTYPE html>
<html>
<head>
    <title>아이디 중복 확인</title>
</head>
<body>
    <script>
        const result = <%= request.getAttribute("result") %>;
        const id = "<%= request.getAttribute("id") %>";

        if (result === 1) {
            alert("이미 사용 중인 아이디입니다.");
            opener.setIdChecked(false);
        } else {
            alert("사용 가능한 아이디입니다.");
            opener.document.writeFrm.id.value = id;
            opener.setIdChecked(true);
        }
        window.close();
    </script>
</body>
</html>
