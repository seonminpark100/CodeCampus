<%@ page contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>회원가입</title>
    <script>
        let idChecked = false;

        function validateForm(form) {
            if (form.name.value.trim() === "") {
                alert("이름을 입력하세요.");
                form.name.focus();
                return false;
            }

            if (form.id.value.trim() === "") {
                alert("아이디를 입력하세요.");
                form.id.focus();
                return false;
            }

            if (!idChecked) {
                alert("아이디 중복 체크를 해주세요.");
                return false;
            }

            if (form.pass.value.trim() === "") {
                alert("비밀번호를 입력하세요.");
                form.pass.focus();
                return false;
            }

            return true;
        }

        function idCheck(form) {
            if (form.id.value.trim() === "") {
                alert("아이디를 입력해주세요.");
                form.id.focus();
                return false;
            }

            let url = "/mvcboard/idcheck.do?id=" + encodeURIComponent(form.id.value);
            window.open(url, "idCheck", "width=500,height=300");
        }

        function setIdChecked(result) {
            idChecked = result;
        }

        function resetIdCheck() {
            idChecked = false;
        }
    </script>
</head>
<body>
    <jsp:include page="../Common/Link.jsp" />
    <div class="container">
        <h2>회원가입</h2>
        <form name="writeFrm" method="post" action="/mvcboard/register.do" onsubmit="return validateForm(this);">
            이름: <input type="text" name="name"><br/>
            아이디: <input type="text" name="id" oninput="resetIdCheck()">
            <input type="button" value="중복 체크" onclick="idCheck(this.form)"><br/>
            비밀번호: <input type="password" name="pass"><br/><br/>
            <button type="submit">회원가입</button>
            <button type="reset" onclick="resetIdCheck()">다시입력</button>
        </form>
    </div>
    <jsp:include page="../Common/Bottom.jsp" />
</body>
</html>
