<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lms.springboot.jdbc.IMemberService">

    <resultMap id="memberDTOResultMap" type="com.lms.springboot.jdbc.MemberDTO">
        <id property="userId" column="USER_ID"/>
        <result property="userPw" column="USER_PW"/>
        <result property="userName" column="USER_NAME"/>
        <result property="userBirthdate" column="USER_BIRTHDATE"/>
        <result property="joinDate" column="JOINDATE"/>
        <result property="authority" column="AUTHORITY"/>
    </resultMap>

    <select id="selectOne" parameterType="String" resultMap="memberDTOResultMap">
        SELECT
            USER_ID AS userId,
            USER_PW AS userPw,
            USER_NAME AS userName,
            USER_BIRTHDATE AS userBirthdate,
            JOINDATE AS joinDate, AUTHORITY AS authority
        FROM
            USER_INFO
        WHERE
            USER_ID = #{userId}
    </select>

</mapper>